<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:tools="http://schemas.android.com/tools"
tools:context=".MainActivity"
android:background="@drawable/backback">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:gravity="center"
        android:text=" Login As"
        android:textColor="#c4c5c9"
        android:textSize="10dp" />

    <Button
        android:id="@+id/cus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/t1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/angle2"
        android:gravity="center"
        android:padding="16dp"
        android:text="CUSTOMER"
        android:textColor="#fff"
        android:textSize="14dp" />

    <ImageView
        android:layout_width="203dp"
        android:layout_height="91dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/lo" />

    <Button
        android:id="@+id/ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cus"
        android:layout_alignLeft="@id/cus"
        android:layout_marginLeft="0dp"
        android:background="@drawable/angle2"
        android:gravity="center"
        android:padding="16dp"

        android:text="ADMIN"
        android:textColor="#fff"
        android:textSize="14dp" />
    <Button
        android:id="@+id/hom"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad"
        android:layout_alignLeft="@id/ad"
        android:layout_marginLeft="0dp"
        android:background="@drawable/angle2"
        android:gravity="center"
        android:padding="16dp"
        android:text="customer's review"
        android:textColor="#fff"
        android:textSize="14dp" />


</RelativeLayout>
</FrameLayout>
