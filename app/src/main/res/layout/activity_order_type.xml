<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/p5"
    tools:context=".Order_type"
    >

    <ImageView
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_above="@+id/imageButton3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/angle2"
        android:layout_marginBottom="28dp"
        android:onClick="starter" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton2"
        android:onClick="nveg"
        android:layout_below="@+id/imageView"
        android:layout_toStartOf="@+id/imageButton"
        android:background="@drawable/angle2"
        android:layout_marginTop="250dp"
        android:layout_toLeftOf="@+id/imageButton" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/button6"
        android:layout_toRightOf="@+id/button6"
        android:background="@drawable/angle2"
        android:onClick="veg" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="76dp"

        android:background="@drawable/angle2"
        android:onClick="dessert" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="10dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:id="@+id/total_on_mm"
        android:layout_alignBottom="@+id/button6"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_toRightOf="@+id/imageButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_marginStart="-10dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginBottom="29dp"
        android:text="starters"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Proceed"
        android:background="#ffbc7a"
        android:onClick="fin_ord"
        android:id="@+id/button6"

        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageButton2"
        android:layout_marginBottom="36dp"
        android:layout_toRightOf="@+id/imageButton2" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton4"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="-51dp"
        android:text="dessert"
        android:textColor="#000000"
        android:textColorHint="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="-40dp"
        android:text="non-veg"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView8"
        android:layout_marginStart="35dp"

        android:layout_marginLeft="35dp"
        android:layout_marginTop="-9dp"
        android:layout_toEndOf="@+id/imageButton4"
        android:layout_toRightOf="@+id/imageButton4"
        android:text="veg"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold" />


</RelativeLayout>
